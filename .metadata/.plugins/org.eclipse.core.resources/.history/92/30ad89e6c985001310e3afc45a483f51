import java.io.*;
import java.net.*;

public class TCPServer 
{

	public static void main(String[] args) 
	{
		ServerSocket socket = null;
		int serverPort = 6789;
		
		try {
			// Create a Socket and bind it to a port
			socket = new ServerSocket(serverPort);
			Socket server = socket.accept();
			// Create the stream of data to be communicated between this server and the client
			BufferedReader bufferedReader = new BufferedReader(new InputStreamReader(server.getInputStream()));
			String line;
			byte [] byteArray = new byte [1000];
			
			while(true) {
				line = bufferedReader.readLine();
				System.out.println("Receiving from server this string : " + line);
				out.write(byteArray);
			}
		} catch (UnknownHostException e) {
			System.out.println("UnknownHostException:" + e.getMessage());
		} catch (IOException e) {
			System.out.println("IOException:" + e.getMessage());
		}
	}

}

import java.io.*;
import java.net.*;

public class TCPServer 
{

	public static void main(String[] args) 
	{
		ServerSocket socket = null;
		int serverPort = 6789;
		
		try {
			socket = new ServerSocket(serverPort);
			while(true) {

				Socket server = socket.accept();

				// Create the stream of data to be communicated between this server and the server
				BufferedReader bufferedReader = new BufferedReader(new InputStreamReader(server.getInputStream()));
				String line = bufferedReader.readLine();
				System.out.println("Receiving from client this string : " + line);
			}
		} catch (UnknownHostException e) {
			System.out.println("UnknownHostException:" + e.getMessage());
		} catch (IOException e) {
			System.out.println("IOException:" + e.getMessage());
		}
	}

}
